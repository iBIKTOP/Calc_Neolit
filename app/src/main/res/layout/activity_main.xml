        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ll_style">

            <Button
                android:id="@+id/btClear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_C"
                android:background="@drawable/button_clear_neolit_selector"
                style="@style/buttonStyle"
                android:layout_margin="1dp"/>
            <Button
                android:id="@+id/btDelete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_Del"
                android:background="@drawable/button_del_neolit_selector"
                style="@style/buttonStyle"
                android:layout_margin="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:background="@drawable/ll_style"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_7"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_7" />

                <Button
                    android:id="@+id/number_8"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_8" />

                <Button
                    android:id="@+id/number_9"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_4"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_4" />

                <Button
                    android:id="@+id/number_5"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_5" />

                <Button
                    android:id="@+id/number_6"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_1"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_1" />

                <Button
                    android:id="@+id/number_2"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_2" />

                <Button
                    android:id="@+id/number_3"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_0"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_0" />

                <Button
                    android:id="@+id/number_point"
                    style="@style/buttonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_8_neolit_selector"
                    android:text="@string/number_point" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/Generate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Generate"
                android:background="@drawable/button_go_neolit_selector"
                android:layout_margin="1dp"
                style="@style/buttonStyle"/>
        </LinearLayout>
